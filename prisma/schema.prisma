// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// models go here
model User {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  username    String        @unique
  password    String
  isAdmin     Boolean       @default(false)
  Testimonial Testimonial[]

  @@map("users")
}

model Activity {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  description String
  itemsId     String[]  @db.ObjectId
  items       Item[]    @relation(fields: [itemsId], references: [id])
  illnessesId String[]  @db.ObjectId
  illnesses   Illness[] @relation(fields: [illnessesId], references: [id])
  difficulty  Int

  @@map("activities")
}

model Item {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  price        Float
  link         String?
  itemType     Int
  activitiesId String[]   @db.ObjectId
  activities   Activity[] @relation(fields: [activitiesId], references: [id])

  @@map("items")
}

model Illness {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  description  String
  symptom      String
  activitiesId String[]   @db.ObjectId
  activities   Activity[] @relation(fields: [activitiesId], references: [id])

  @@map("illnesses")
}

model Testimonial {
  id     String  @id @default(auto()) @map("_id") @db.ObjectId
  text   String
  user   User?   @relation(fields: [userId], references: [id])
  userId String? @db.ObjectId

  @@map("testimonials")
}
