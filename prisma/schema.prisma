generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// models go here
model User {
  id          String        @id @default(uuid())
  username    String        @unique
  password    String
  isAdmin     Boolean       @default(false)
  Testimonial Testimonial[]

  @@map("users")
}

model Activity {
  id          Int       @id @default(autoincrement())
  description String
  items       Item[]
  illnesses   Illness[]
  difficulty  Int

  @@map("actvities")
}

model Item {
  id        Int        @id @default(autoincrement())
  name      String
  price     Decimal
  link      String?
  itemType  Int
  actvities Activity[]

  @@map("items")
}

model Illness {
  id          Int        @id @default(autoincrement())
  description String
  symptom     String
  activities  Activity[]

  @@map("illnesses")
}

model Testimonial {
  id     Int     @id @default(autoincrement())
  text   String
  user   User?   @relation(fields: [userId], references: [id])
  userId String?

  @@map("testimonials")
}

