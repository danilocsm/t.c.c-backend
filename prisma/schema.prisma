// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// models go here
model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  username String
  email    String  @unique
  password String
  picture  String?
  role     Role    @default(USER)

  @@map("users")
}

model Activity {
  id           String         @id @default(auto()) @map("_id") @db.ObjectId
  name         String         @unique
  description  String
  observations String
  items        ActivityItem[]
  illnesses    String
  difficulty   Difficulty
  image        String?

  @@map("activities")
}

type ActivityItem {
  name        String
  description String
  image       String
}

model Item {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  name     String   @unique
  price    Float
  link     String?
  imageUrl String?
  itemType ItemType

  @@map("items")
}

model Illness {
  id               String           @id @default(auto()) @map("_id") @db.ObjectId
  name             String           @unique
  description      String
  symptoms         String[]
  levelOfAttention LevelOfAttention

  @@map("illnesses")
}

model Question {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  contactEmail String
  text         String
  isAnswered   Boolean @default(false)

  @@map("questions")
}

model Testimonial {
  id     String  @id @default(auto()) @map("_id") @db.ObjectId
  text   String
  author String?

  @@map("testimonials")
}

enum Role {
  USER
  ADMIN
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
  VERY_HARD
}

enum LevelOfAttention {
  LOW
  AVERAGE
  HIGH
  VERY_HIGH
}

enum ItemType {
  TOY
  ACCESSORY
  CLOATHING
  FOOD
}
