// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// models go here
model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  username String  @unique
  email    String  @unique
  password String
  picture  String?
  role     Role    @default(USER)

  @@map("users")
}

model Activity {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  name        String     @unique
  description String
  itemsId     String[]   @db.ObjectId
  items       Item[]     @relation(fields: [itemsId], references: [id])
  illnessesId String[]   @db.ObjectId
  illnesses   Illness[]  @relation(fields: [illnessesId], references: [id])
  difficulty  Difficulty
  images      String[]

  @@map("activities")
}

model Item {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  name         String     @unique
  price        Float
  link         String?
  itemType     ItemType
  activitiesId String[]   @db.ObjectId
  activities   Activity[] @relation(fields: [activitiesId], references: [id])

  @@map("items")
}

model Illness {
  id               String           @id @default(auto()) @map("_id") @db.ObjectId
  name             String           @unique
  description      String
  symptoms         String[]
  levelOfAttention LevelOfAttention
  activitiesId     String[]         @db.ObjectId
  activities       Activity[]       @relation(fields: [activitiesId], references: [id])

  @@map("illnesses")
}

model Testimonial {
  id     String  @id @default(auto()) @map("_id") @db.ObjectId
  text   String
  author String?

  @@map("testimonials")
}

enum Role {
  USER
  ADMIN
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
  VERY_HARD
}

enum LevelOfAttention {
  LOW
  AVERAGE
  HIGH
  VERY_HIGH
}

enum ItemType {
  TOY
  ACCESSORY
  CLOTHING
}
